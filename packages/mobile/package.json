{
  "name": "mobile",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "node": ">= 6.11.1 <= 10",
    "yarn": ">= 1.0.0"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production zen build",
    "clean": "rimraf build .expo .tmp",
    "exp": "cross-env NODE_ENV=production zen exp",
    "exp-login": "cross-env NODE_ENV=production zen exp login -u $EXP_USERNAME -p $EXP_PASSWORD --non-interactive",
    "exp-publish": "yarn exp-login && yarn exp -- p --non-interactive",
    "jest": "cross-env NODE_ENV=jest PORT=7070 jest",
    "jest:watch": "cross-env NODE_ENV=jest PORT=7070 jest --watch",
    "test": "yarn tests && yarn lint",
    "eslint": "eslint --fix --ext js --ext jsx --ext json src",
    "tslint": "tslint --fix -p tsconfig.json -c ../../tslint.json",
    "lint": "yarn eslint && yarn tslint",
    "watch": "zen watch",
    "watch:android": "zen -e android -d ios watch",
    "watch:ios": "zen -e ios -d android watch",
    "heroku-postbuild": "yarn build && yarn exp-publish",
    "cli": "node ../../tools/cli"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sysgears/apollo-universal-starter-kit"
  },
  "bugs": {
    "url": "https://github.com/sysgears/apollo-universal-starter-kit/issues"
  },
  "homepage": "https://github.com/sysgears/apollo-universal-starter-kit",
  "keywords": [
    "apollo",
    "universal",
    "starter",
    "graphql",
    "react",
    "redux"
  ],
  "author": "SysGears INC",
  "license": "MIT",
  "dependencies": {
    "@gqlapp/authentication-client-react": "^0.1.0",
    "@gqlapp/core-client-react-native": "^0.1.0",
    "@gqlapp/contact-client-react": "^0.1.0",
    "@gqlapp/counter-client-react": "^0.1.0",
    "@gqlapp/chat-client-react": "^0.1.0",
    "@gqlapp/i18n-client-react": "^0.1.0",
    "@gqlapp/module-client-react-native": "^0.1.0",
    "@gqlapp/pagination-client-react": "^0.1.0",
    "@gqlapp/payments-client-react": "^0.1.0",
    "@gqlapp/post-client-react": "^0.1.0",
    "@gqlapp/router-client-react-native": "^0.1.0",
    "@gqlapp/upload-client-react": "^0.1.0",
    "@gqlapp/user-client-react": "^0.1.0",
    "@gqlapp/validation-common-react": "^0.1.0",
    "expo": "^32.0.0",
    "graphql": "^14.1.1",
    "graphql-tools": "^4.0.4",
    "react": "^16.5.0",
    "react-apollo": "^2.3.1",
    "react-native": "https://github.com/expo/react-native/archive/sdk-32.0.0.tar.gz",
    "react-redux": "^5.0.6",
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "@types/expo": "^30.0.0",
    "@types/expo__vector-icons": "^6.2.3",
    "@types/jest": "^23.3.1",
    "@types/react-native-keyboard-spacer": "^0.4.1",
    "@types/react-test-renderer": "^16.0.2",
    "apollo-utilities": "^1.0.3",
    "caporal": "^0.10.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "compression": "^1.7.1",
    "connect": "^3.6.5",
    "cross-env": "^5.1.1",
    "eslint": "^4.13.1",
    "exp": "^57.2.1",
    "expo-file-system": "^1.0.1",
    "expo-react-native-adapter": "^1.0.1",
    "freeport-async": "^1.1.1",
    "haul": "^1.0.0-rc.9",
    "image-size": "^0.6.2",
    "jsdom": "^11.5.1",
    "mkdirp": "^0.5.1",
    "mocha": "^5.1.1",
    "mocha-steps": "^1.1.0",
    "mochapack": "^1.0.0",
    "react-addons-test-utils": "^16.0.0-alpha.3",
    "react-test-renderer": "16.5.0",
    "request": "^2.83.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.4",
    "ws": "^5.1.1",
    "xdl": "^49.2.0"
  },
  "peerDependencies": {
    "@larix/zen": "^0.1.0"
  },
  "jest": {
    "verbose": true,
    "preset": "jest-expo",
    "testPathIgnorePatterns": [
      "node_modules",
      ".history"
    ],
    "testRegex": ".*/__tests__/.*\\.jest\\.(js|jsx|ts|tsx)$",
    "rootDir": "../../modules",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/react-native/Libraries/react-native/",
      "<rootDir>/node_modules/react-native/jest/",
      "<rootDir>/node_modules/haul/",
      "<rootDir>/packages/mobile/.expo/"
    ],
    "globals": {
      "__CLIENT__": true,
      "__SERVER__": false,
      "__TEST__": true,
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    }
  }
}
