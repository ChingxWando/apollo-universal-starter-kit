{
  "name": "server",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "node": ">= 6.11.1 <= 10",
    "yarn": ">= 1.0.0"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production zen build",
    "clean": "rimraf build .tmp",
    "start": "node --harmony build",
    "tests": "cross-env NODE_ENV=test PORT=7070 zen test -t 10000 --include src/__tests__/entry.ts --full-trace \"src/**/*.spec.*\" \"../../modules/**/server-ts/**/*.spec.*\"",
    "tests:watch": "cross-env NODE_ENV=test PORT=7070 zen test -t 10000 --include src/__tests__/entry.ts --full-trace --watch \"src/**/*.spec.*\" \"../../modules/**/server-ts/**/*.spec.*\"",
    "test": "yarn tests && yarn lint",
    "eslint": "eslint --fix --ext js --ext jsx --ext json src",
    "tslint": "tslint --fix -p tsconfig.json -c ../../tslint.json",
    "lint": "yarn eslint && yarn tslint",
    "seed": "yarn migrate && knex seed:run",
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback",
    "watch": "zen watch",
    "heroku-postbuild": "yarn build && yarn seed && yarn stripe:setup",
    "cli": "node ../../tools/cli",
    "stripe:setup": "node ../../modules/payments/server-ts/stripe/subscription/cli/stripeSetup"
  },
  "lint-staged": {
    "*.{js,jsx,json}": [
      "eslint --fix",
      "git add"
    ],
    "*.graphql": [
      "prettier --parser graphql --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sysgears/apollo-universal-starter-kit"
  },
  "bugs": {
    "url": "https://github.com/sysgears/apollo-universal-starter-kit/issues"
  },
  "homepage": "https://github.com/sysgears/apollo-universal-starter-kit",
  "keywords": [
    "apollo",
    "universal",
    "starter",
    "graphql",
    "react",
    "redux"
  ],
  "author": "SysGears INC",
  "license": "MIT",
  "dependencies": {
    "@gqlapp/authentication-server-ts": "^0.1.0",
    "@gqlapp/chat-server-ts": "^0.1.0",
    "@gqlapp/contact-server-ts": "^0.1.0",
    "@gqlapp/cookies-server-ts": "^0.1.0",
    "@gqlapp/core-common": "^0.1.0",
    "@gqlapp/core-server-ts": "^0.1.0",
    "@gqlapp/counter-server-ts": "^0.1.0",
    "@gqlapp/database-server-ts": "^0.1.0",
    "@gqlapp/debug-server-ts": "^0.1.0",
    "@gqlapp/graphql-types-server-ts": "^0.1.0",
    "@gqlapp/i18n-server-ts": "^0.1.0",
    "@gqlapp/mailer-server-ts": "^0.1.0",
    "@gqlapp/module-server-ts": "^0.1.0",
    "@gqlapp/post-server-ts": "^0.1.0",
    "@gqlapp/reports-server-ts": "^0.1.0",
    "@gqlapp/rest-server-ts": "^0.1.0",
    "@gqlapp/testing-server-ts": "^0.1.0",
    "@gqlapp/payments-server-ts": "^0.1.0",
    "@gqlapp/upload-server-ts": "^0.1.0",
    "@gqlapp/user-server-ts": "^0.1.0",
    "@gqlapp/validation-common-react": "^0.1.0",
    "dotenv": "^5.0.1"
  },
  "devDependencies": {
    "mochapack": "^1.1.1"
  }
}
